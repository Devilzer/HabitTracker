    <div class="container-fluid " id="maincon">
        <div id="container" class="col-md-9">
            <div id="heading" class="row">
                <div id="appname">
                    <span class="company_logo">
                        <h1><span class="fa fa-calendar"></span>
                        </h1>
                    </span>
                    <h1 class="company_title">
                        Habit Tracker
                    </h1>
                </div>
                <div id="username">
                    Welcome <%= localuser.username %> 
                </div>
                
            </div>
            <div class="row" id="qoute">
                <h4>
                    Life is a Succession Of Habits.Lets Start With One.
                </h4>
            </div>
            <div class="row" id="hinput">   
                <form class="form-group" action="/create-habit" method="POST">
                    <input type="text" name="habit" id="habit" class="form__input" placeholder="Habit" required>
                    <input type="submit" value="Add" class="btn">
                </form>
                <div id="details">
                    <a data-toggle="collapse" href="#Example one" role="button" aria-expanded="false" aria-controls="Example one">
                        <h4>
                            <span class="fa fa-caret-square-o-down"></span> Details
                        </h4>
                    </a>    
                </div>
            </div>
            <!-- habits List....................... -->
            <div id="habit-list" class="row">
                <%for(let i of habits) {%>
